<Window x:Class="SpeechPhoto_WPF.CapturedPhotoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Captured Photo" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Image to display captured photo -->
        <Image x:Name="capturedImageView" Grid.Row="0" Stretch="Uniform" Margin="10" />

        <!-- Buttons for Save, Upload, and Delete -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button Content="Save" Click="SaveButton_Click" Margin="10" />
            <Button Content="Upload" Click="UploadButton_Click" Margin="10" />
            <Button Content="Delete" Click="DeleteButton_Click" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
