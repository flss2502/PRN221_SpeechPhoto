<Window x:Class="SpeechPhoto_WPF.Image"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeechPhoto_WPF"
        mc:Ignorable="d"
        Title="Image" Height="503" Width="806">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Image to display captured photo -->
        <Image x:Name="imageView" Grid.Row="0" Stretch="Uniform" Margin="10" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button Content="Upload" Click="UploadButton_Click" Margin="10" />
            <Button Content="Delete" Click="DeleteButton_Click" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
