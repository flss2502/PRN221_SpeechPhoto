<Window x:Class="SpeechPhoto_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gmaps="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
        Title="Speech Photo App" Height="1262" Width="1520">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="689" />
            <RowDefinition Height="Auto" MinHeight="60"/>
            <RowDefinition Height="Auto" MinHeight="35.96" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="10,10,10,32">
            <TextBlock Text="Speech Photo App" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" />
            <Image x:Name="webcamImage" Height="574" Width="876"/>
            <Border x:Name="overlayBorder" Background="#80000000" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10">
                <TextBlock x:Name="weatherText" Foreground="White" Margin="10" Text="Weather: " TextWrapping="Wrap"/>
            </Border>
        </StackPanel>

        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="10,0,10,0" Height="514" VerticalAlignment="Center">

            <Label x:Name="lblFolderName" Content="Folder Name:" FontWeight="Bold" Width="95" HorizontalAlignment="Left"/>
            <TextBox x:Name="txbFolderName" TextWrapping="Wrap" Width="408" Height="22" IsReadOnly="True" HorizontalAlignment="Left"/>
            <Button x:Name="btnBrowseFile" Content="Browse Files" Height="30" Width="96" Click="btnBrowseFile_Click" HorizontalAlignment="Left"/>
            <ListView x:Name="imageListView" Width="1004" Height="385" MouseDoubleClick="imageListView_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Thumbnail" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding Thumbnail}" Width="80" Height="60" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Name" Width="100" DisplayMemberBinding="{Binding Name}" />
                    </GridView>
                </ListView.View>
            </ListView>
            <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10" Height="42">
                <Button x:Name="StartRecognitionButton" Content="Start Recognition" Click="StartRecognitionButton_Click" Margin="0 0 10 0" Width="150" />
                <Button x:Name="StopRecognitionButton" Content="Stop Recognition" Click="StopRecognitionButton_Click" Width="150" />
            </StackPanel>-->
        </StackPanel>

        <!-- Footer -->
        <TextBlock Grid.Row="2" Text="Speak 'take photo' to capture a photo." Margin="0,10,0,10" HorizontalAlignment="Center" Width="204" />
    </Grid>
</Window>
